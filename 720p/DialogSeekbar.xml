        <visible>player.forwarding32x</visible>
      </control>

      <control type="label">
        <posx>0</posx>
        <posy>100</posy>
        <width>1000</width>
        <align>center</align>
        <label>[B]RWx2[/B]</label>
        <visible>player.rewinding2x</visible>
      </control>

      <control type="label">
        <posx>0</posx>
        <posy>100</posy>
        <width>1000</width>
        <align>center</align>
        <label>[B]RWx4[/B]</label>
        <visible>player.rewinding4x</visible>
      </control>

      <control type="label">
        <posx>0</posx>
        <posy>100</posy>
        <width>1000</width>
        <align>center</align>
        <label>[B]RWx8[/B]</label>
        <visible>player.rewinding8x</visible>
      </control>

      <control type="label">
        <posx>0</posx>
        <posy>100</posy>
        <width>1000</width>
        <align>center</align>
        <label>[B]RWx16[/B]</label>
        <visible>player.rewinding16x</visible>
      </control>

      <control type="label">
        <posx>0</posx>
        <posy>100</posy>
        <width>1000</width>
        <align>center</align>
        <label>[B]RWx32[/B]</label>
        <visible>player.rewinding32x</visible>
      </control>

    </control>
  </controls>
</window>
