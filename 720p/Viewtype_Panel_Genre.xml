<includes>
	<include name="Viewtype_Panel_Genre">


		<control type="group">

			<visible>Control.IsVisible(56)</visible>
			<animation type="TYPE" condition="Window.IsVisible(2003)" reversible="false">
				<effect type="slide" end="-1500,0" time="200"/>
			</animation>
			<animation type="TYPE" condition="!Window.IsVisible(2003)" reversible="false">
				<effect type="slide" start="-1500,0" time="200"/>
			</animation>		


			<animation type="WindowClose">
				<effect type="fade" time="300"/>
				<effect type="slide" end="+1500,0" time="300"/>
			</animation>
			<animation type="WindowOpen">
				<effect type="fade" time="300"/>
				<effect type="slide" start="+1500,0" time="300"/>
			</animation>

			<animation effect="fade" time="300">WindowOpen</animation>


			<animation type="WindowClose">
				<effect type="fade" time="300"/>
			</animation>
			
			<control type="image">
				<posx>-12</posx>
				<posy>174</posy>
				<width>72</width>
				<height>72</height>
				<texture background="true">other_textures/osd/playlistnf.png</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<animation effect="slide" start="0,0" end="-100,0" time="300" condition="ControlGroup(9000).HasFocus()" reversible="false">Conditional</animation>
				<animation effect="slide" start="-100,0" end="0,0" time="300" delay="100" condition="!ControlGroup(9000).HasFocus()" reversible="false">Conditional</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0,0" end="-100,0" time="200" />
				</animation>
				<animation type="WindowOpen">
					<effect type="slide" start="-100,0" end="0,0" time="200" delay="100" />
				</animation>
				<animation type="Hidden">
					<effect type="slide" start="0,0" end="-100,0" time="200" />
				</animation>
				<animation type="Visible">
					<effect type="slide" start="-100,0" end="0,0" time="200" delay="100" />
				</animation>
			</control>


			<control type="panel" id="56">
				<viewtype label="Genres">Genres</viewtype>
				<posx>60</posx>
				<posy>290</posy>
				<width>1200</width>
				<height>318</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<onright>56</onright>
				<onleft>9000</onleft>
				<pagecontrol>62</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(1) | Container.Content(genres)</visible>

				<itemlayout width="159" height="159">
					<control type="image">
						<posx>9</posx>
						<posy></posy>
						<width>155</width>
						<height>155</height>
						<texture background="true">tile.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>

					<control type="image">
						<posx>46</posx>
						<posy>28</posy>
						<width>80</width>
						<height>80</height>
						<texture background="true" >moviegenres/$INFO[ListItem.Label].png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>

					<control type="label">
						<label>  $INFO[ListItem.Label]</label>
						<posx>10</posx>
						<posy>121</posy>
						<height>30</height>
						<width>153</width>
						<font>button_bold</font>
						<align>left</align>
					</control>
				</itemlayout>
				<focusedlayout width="159" height="159">
					<control type="image">
						<posx>9</posx>
						<posy></posy>
						<width>155</width>
						<height>155</height>
						<texture>button.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="fade" start="0" end="100"  time="400" easing="out" tween="square" />
						</animation>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>

					<control type="image">
						<posx>46</posx>
						<posy>28</posy>
						<width>80</width>
						<height>80</height>
						<texture background="true" >moviegenres/$INFO[ListItem.Label].png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>

					<control type="label">
						<label>  $INFO[ListItem.Label]</label>
						<posx>10</posx>
						<posy>121</posy>
						<height>30</height>
						<width>153</width>
						<font>button_bold</font>
						<align>left</align>
					</control>
				</focusedlayout>
			</control>

			<control type="label">
				<posx>75</posx>
				<posy>220</posy>
				<width>300</width>
				<align>left</align>
				<aligny>top</aligny>
				<label>categorised by: [COLOR Accent]genre[/COLOR]</label>
				<font>Sort_Font_Small</font>
				<textcolor>white</textcolor>
				<visible>Container.Content(genres)</visible>
			</control>

			<control type="label">
				<label>$INFO[Window(home).Property(genre)]</label>
				<posx>70</posx>
				<posy>170</posy>
				<height>30</height>
				<width>550</width>
				<font>Home_header</font>
				<align>left</align>
				<visible>Container.Content(genres)</visible>
			</control>

			<control type="fadelabel" id="140">
				<posx>384</posx>
				<posy>185</posy>
				<height>30</height>
				<width>985</width>
				<font>Home_menu</font>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>true</visible>
				<scroll>true</scroll>
				<scrollout>false</scrollout>
				<pauseatend>600</pauseatend>
				<scrollspeed>50</scrollspeed>
				<visible>Container.Content(Genres)</visible>
			</control>
		</control>	


		<control type="image" id="2">
			<description>top left bar</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>20</width>
			<height>138</height>
			<texture>bar.png</texture>
			<animation effect="fade" time="400">WindowOpen</animation>
			<animation effect="fade" time="400">WindowClose</animation>
			<visible>!container.content(episodes) + !container.content(songs)</visible>
		</control>	

	</include>
</includes>
