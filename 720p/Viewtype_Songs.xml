<includes>
	<include name="Viewtype_Songs">

		<control type="image">
			<posx>-12</posx>
			<posy>174</posy>
			<width>72</width>
			<height>72</height>
			<texture background="true">other_textures/osd/playlistnf.png</texture>
			<aspectratio scalediffuse="false">stretch</aspectratio>
			<animation effect="slide" start="0,0" end="-100,0" time="300" condition="ControlGroup(503).HasFocus()" reversible="false">Conditional</animation>
			<animation effect="slide" start="-100,0" end="0,0" time="300" delay="100" condition="!ControlGroup(503).HasFocus()" reversible="false">Conditional</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="-100,0" time="200" />
			</animation>
			<animation type="WindowOpen">
				<effect type="slide" start="-100,0" end="0,0" time="200" delay="100" />
			</animation>
		</control>

		<control type="group">
			<visible>Control.IsVisible(503)</visible>
			<animation type="TYPE" condition="Window.IsVisible(135)" reversible="false">
				<effect type="slide" end="-1500,0" time="200"/>
			</animation>
			<animation type="TYPE" condition="!Window.IsVisible(135)" reversible="false">
				<effect type="slide" start="-1500,0" time="200"/>
			</animation>

			<control type="image">
				<posx>396</posx>
				<posy>288</posy>
				<width>884</width>
				<height>315</height>
				<texture>music_fanart_diffuse.png</texture>
				<fadetime>200</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
			</control>
			
			<control type="list" id="503">
				<posx>396</posx>
				<posy>288</posy>
				<width>884</width>
				<height>315</height>
				<onup>503</onup>
				<ondown>503</ondown>
				<onright>1</onright>
				<onleft>9000</onleft>
				<scrolltime>0</scrolltime>
				<viewtype label="Song View">Song View</viewtype>
				<orientation>vertical</orientation>
				<focusposition>4</focusposition>
				<pagecontrol>63</pagecontrol>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(musiclibrary) + Container.Content(songs)</visible>
				
				<itemlayout height="45">
					<control type="image">
						<width>884</width>
						<height>45</height>
						<texture border="2">other_textures/buttonnf.png</texture>
					</control>

					<control type="label">
						<posx>22</posx>
						<width>45</width>
						<align>center</align>
						<label>$INFO[ListItem.TrackNumber]</label>
					</control>

					<control type="label">
						<posx>65</posx>
						<width>730</width>
						<label>$INFO[ListItem.Title] $INFO[ListItem.Artist,by ]</label>
					</control>

					<control type="label">
						<posx>864</posx>
						<align>right</align>
						<width>100</width>
						<label>$INFO[ListItem.Duration]</label>
					</control>
				</itemlayout>

				<focusedlayout height="45">
					<control type="image">
						<width>884</width>
						<height>45</height>
						<texture border="5">other_textures/buttonfo.png</texture>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>

					<control type="image">
						<width>45</width>
						<height>45</height>
						<texture border="5">button.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="fade" start="60" end="100" time="400" />
						</animation>
					</control>

					<control type="label">
						<posx>22</posx>
						<width>45</width>
						<align>center</align>
						<label>[B]$INFO[ListItem.TrackNumber][/B]</label>
					</control>

					<control type="label">
						<posx>65</posx>
						<width>730</width>
						<label>[COLOR Accent]$INFO[ListItem.Title] $INFO[ListItem.Artist,[COLOR White]by [/COLOR]][/COLOR]</label>
					</control>

					<control type="label">
						<posx>864</posx>
						<align>right</align>
						<width>100</width>
						<label>[COLOR Accent]$INFO[ListItem.Duration][/COLOR]</label>
					</control>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="63">
				<posx>1270</posx>
				<posy>288</posy>
				<width>10</width>
				<height>315</height>
				<texturesliderbackground></texturesliderbackground>
				<textureslidernib>bar.png</textureslidernib>
				<textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
				<texturesliderbar></texturesliderbar>
				<texturesliderbarfocus></texturesliderbarfocus>
				<showonepage>true</showonepage>
				<orientation>vertical</orientation>		
			</control>

			<control type="label">
				<label>music</label>
				<posx>70</posx>
				<posy>170</posy>
				<height>30</height>
				<width>250</width>
				<font>Home_header</font>
				<align>left</align>
			</control>

			<control type="label">
				<posx>75</posx>
				<posy>220</posy>
				<width>300</width>
				<align>left</align>
				<aligny>top</aligny>
				<label>sort by: [COLOR Accent][LOWERCASE]$INFO[Container.SortMethod][/LOWERCASE][/COLOR] </label>
				<font>Sort_Font_Small</font>
				<textcolor>White</textcolor>
				<visible>Window.IsActive(1) | Container.Content(Songs)</visible>
			</control>

			<control type="fadelabel">
				<label>[COLOR Accent]$INFO[ListItem.Album][/COLOR] $INFO[ListItem.Year]</label>
				<posx>395</posx>
				<posy>171</posy>
				<height>30</height>
				<width>885</width>
				<font>Home_menu</font>
				<scroll>true</scroll>
				<scrollout>false</scrollout>
				<pauseatend>600</pauseatend>
				<scrollspeed>50</scrollspeed>
				<aligny>top</aligny>
				<visible>Container.Content(Songs)</visible>
			</control>

			<control type="label">
				<posx>395</posx>
				<posy>210</posy>
				<width>600</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Sort_Font_Small</font>
				<textcolor>White</textcolor>
				<label>[COLOR Accent]$INFO[ListItem.Genre,[COLOR White]$LOCALIZE[21515]: [/COLOR]][/COLOR]</label>
				<visible>Container.Content(Songs)</visible>
			</control>

			<control type="image">
				<posx>76</posx>
				<posy>288</posy>
				<width>315</width>
				<height>315</height>
				<texture>white_box.png</texture>
				<fadetime>200</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>!StringCompare(ListItem.Album, )</visible>
			</control>					

			<control type="image">
				<posx>76</posx>
				<posy>288</posy>
				<width>315</width>
				<height>315</height>
				<texture>$INFO[ListItem.Icon]</texture>
				<fadetime>200</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>true</visible>
				<bordersize>4</bordersize>
			</control>
			
		</control>
		
		<control type="button" id="1">
			<description>Bookmarks</description>
			<posx>1120</posx>
			<posy>310</posy>
			<width>90</width>
			<height>90</height>
			<onleft>503</onleft>
			<label></label>
			<font>-</font>
			<texturefocus>other_textures/osd/playvidfo.png</texturefocus>
			<texturenofocus>other_textures/osd/playvidnf.png</texturenofocus>
			<onclick>PlayMedia($ESCINFO[Window.Property(SongToMusicVideo.Path)])</onclick>
			<visible>!IsEmpty(Window.Property(SongToMusicVideo.Path))</visible>
			<animation effect="slide" start="200,0" end="0,0" time="200" tween="cubic" easing="out">VisibleChange</animation>
		</control>

		<control type="label">
			<posx>1120</posx>
			<posy>410</posy>
			<width>780</width>
			<height>17</height>
			<aligny>center</aligny>
			<font>Font_ListDetail</font>
			<textcolor>white</textcolor>
			<selectedcolor>Accent</selectedcolor>
			<label>play video</label>
			<visible>!IsEmpty(Window.Property(SongToMusicVideo.Path))</visible>
			<animation effect="slide" start="200,0" end="0,0" time="200" tween="cubic" easing="out">VisibleChange</animation>
		</control>

		<control type="image" id="2">
			<description>top left bar</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>20</width>
			<height>138</height>
			<visible>true</visible>
			<texture>bar.png</texture>
			<animation effect="fade" time="400">WindowOpen</animation>
			<animation effect="fade" time="400">WindowClose</animation>
		</control>				

	</include>
</includes>
