					<aligny>top</aligny>
					<label>[COLOR Accent]$INFO[ListItem.Label][/COLOR] $INFO[ListItem.Year]</label>
					<visible>true</visible>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
					<visible>[Window.IsActive(1) | Container.Content(Movies) | Container.Content(TVShows)] + !SubString(ListItem.Label,Season)</visible>
				</control>

				<control type="fadelabel">
					<posx>548</posx>
					<posy>171</posy>
					<height>30</height>
					<width>732</width>
					<font>Home_menu</font>
					<aligny>top</aligny>
					<label>[COLOR Accent]$INFO[ListItem.TVShowTitle][/COLOR] $INFO[ListItem.Label]</label>
					<visible>true</visible>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
