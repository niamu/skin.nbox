						<width>180</width>
						<align>right</align>
					</control>

					<control type="button" id="6">
						<description>Refresh</description>
						<label>184</label>
						<width>180</width>
						<align>right</align>
						<focusedcolor>Accent</focusedcolor>
					</control>

					<control type="button" id="10">
						<description>Poster</description>
						<label>Art</label>
						<width>180</width>
						<align>right</align>
						<focusedcolor>Accent</focusedcolor>
					</control>

				</control>

				<control type="list" id="50">
					<description>Cast</description>
					<posx>545</posx>
					<posy>288</posy>
					<width>630</width>
					<height>240</height>
					<onup>50</onup>
					<ondown>50</ondown>
					<onleft>9000</onleft>
					<onright>50</onright>
					<orientation>vertical</orientation>
					<scrolltime>200</scrolltime>

					<itemlayout height="46">

						<control type="image">
							<width>600</width>
							<height>44</height>
							<texture border="2">other_textures/buttonnf.png</texture>
						</control>

						<control type="label">
							<posx>20</posx>
							<width>540</width>
							<info>ListItem.Label</info>
						</control>

					</itemlayout>

					<focusedlayout height="46">

						<control type="image">
							<width>600</width>
							<height>44</height>
							<texture border="5">other_textures/buttonfo.png</texture>
							<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
						</control>

						<control type="label">
							<posx>20</posx>
							<width>540</width>
							<info>ListItem.Label</info>
						</control>

					</focusedlayout>

				</control>


				<control type="textbox" id="4">
					<description>Plot</description>
					<posx>565</posx>
					<posy>302</posy>
					<width>555</width>
					<height>245</height>
					<align>justify</align>
					<pagecontrol>60</pagecontrol>
				</control>

				<control type="spincontrol" id="60">
					<posx>980</posx>
					<posy>554</posy>
					<width>46</width>
					<height>30</height>
					<visible></visible>
					<subtype>page</subtype>
					<font>-</font>
					<textureup>-</textureup>
					<textureupfocus>-</textureupfocus>
					<texturedown>-</texturedown>
					<texturedownfocus>-</texturedownfocus>
					<pulseonselect>no</pulseonselect>
					<onup>50</onup>
					<onleft>9000</onleft>
					<onright>60</onright>
					<ondown>50</ondown>
					<showonepage>true</showonepage>
				</control>




			</control>

		</control>



	</controls>

