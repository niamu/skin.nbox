			<animation type="WindowOpen">
				<effect type="fade" time="300"/>
				<effect type="slide" start="+1500,0" time="300"/>
			</animation>


			<control type="group">
				<posx></posx>
				<posy></posy>

				<control type="image">
					<posx>545</posx>
					<posy>288</posy>
					<width>600</width>
					<height>315</height>
					<texture>music_fanart_diffuse.png</texture>
				</control>


				<control type="image">
					<description>Cover Image</description>
					<posx>230</posx>
					<posy>180</posy>
					<width>290</width>
					<height>424</height>
					<texture>$INFO[ListItem.Art(tvshow.poster)]</texture>
					<aspectratio align="right" aligny="center">stretch</aspectratio>
					<bordertexture border="5">white_box.png</bordertexture>
					<bordersize>5</bordersize>
					<visible>!Control.HasFocus(50) + Container.Content(episodes)</visible>
				</control>

				<control type="image">
					<description>Cover Image</description>
					<posx>230</posx>
					<posy>180</posy>
					<width>290</width>
					<height>424</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio align="right" aligny="center">stretch</aspectratio>
					<bordertexture border="5">white_box.png</bordertexture>
					<bordersize>5</bordersize>
					<visible>!Control.HasFocus(50) + !Container.Content(episodes)</visible>
				</control>

				<control type="image">
					<description>Actor Image</description>
					<posx>230</posx>
					<posy>180</posy>
					<width>290</width>
					<height>424</height>
					<texture>$INFO[Container(50).ListItem.Icon]</texture>
