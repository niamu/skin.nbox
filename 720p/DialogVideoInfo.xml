<window id="2003">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<control type="group">

			<animation type="WindowClose">
				<effect type="fade" time="300"/>
				<effect type="slide" end="+1500,0" time="300"/>
